<% provide :title do %><%= @meeting.title %><% end %>

<section class="investment-project-show">
  <div id="<%= dom_id(@meeting) %>" class="row">
    <div class="small-12 medium-9 column">

      <h1><%= @meeting.title %></h1>

      <div class="investment-project-info">

        <%= link_to @meeting.assembly.name, @meeting.assembly %>
        <span class="bullet">&nbsp;&bull;&nbsp;</span>
        <%= l @meeting.scheduled_at.to_date %>
        <span class="bullet">&nbsp;&bull;&nbsp;</span>
        <%= @meeting.about_venue %>
        <span class="bullet">&nbsp;&bull;&nbsp;</span>
        <%= render 'status', meeting: @meeting %>
      </div>

      <%= safe_html_with_links @meeting.description.html_safe %>

      <hr>



  <ul class="tabs" data-tab role="tablist">
    <li class="tabs-title is-active"><a href="#panel1" role="presentation" aria-selected="true" aria-controls="panel1">Tab 1</a></li>
    <li class="tabs-title"><a href="#panel2" role="presentation" aria-selected="false" aria-controls="panel2">Tab 2</a></li>
    <li class="tabs-title"><a href="#panel3" role="presentation" aria-selected="false" aria-controls="panel3">Tab 3</a></li>
    <li class="tabs-title"><a href="#panel4" role="presentation" aria-selected="false" aria-controls="panel4">Tab 4</a></li>
  </ul>
  <div class="tabs-content">
    <div class="tabs-panel is-active" role="tabpanel" aria-hidden="false" id="panel1">
      <h2>First panel content goes here...</h2>
    </div>
    <div class="tabs-panel" role="tabpanel" aria-hidden="true" id="panel2">
      <h2>Second panel content goes here...</h2>
    </div>
    <div class="tabs-panel" role="tabpanel" aria-hidden="true" id="panel3">
      <h2>Third panel content goes here...</h2>
    </div>
    <div class="tabs-panel" role="tabpanel" aria-hidden="true" id="panel4">
      <h2>Fourth panel content goes here...</h2>
    </div>
  </div>

      <div class="row">
        <div class="small-12 column">
          <h3><%= t('.order_of_the_day') %></h3>
        </div>

        <% if @meeting.proposals.any? %>

          <div class="medium-4 column">
            <h5><%= t('.acts_to_approve') %></h5>
            <% if @meeting.proposals.to_approve.any? %>
              <ul>
              <% @meeting.proposals.to_approve.each do |proposal| %>
                <li><%= proposal.title %></li>
              <% end %>
            <% else %>
              <%= t('.nothing_to_approve') %>
            </ul>
            <% end %>

          </div>
          <div class="medium-4 column">
            <h5><%= t('.accepted') %></h5>
            <ul>
              <% if @meeting.proposals.accepted.any? %>
                <% @meeting.proposals.accepted.each do  |proposal| %>
                  <li>
                    </small><%= proposal.title %></small>
                  </li>
                <% end %>
              <% else %>
                <small class="text-muted"><%= t('.not_accepted') %></small>
              <% end %>
            </ul>
          </div>

          <div class="medium-4 column">
            <h5><%= t('.pending') %></h5>
            <ul>
              <% if @meeting.proposals.pending.any? %>
                <% @meeting.proposals.pending.each do  |proposal| %>
                  <li>
                    <small><%= proposal.title %></small>
                  </li>
                <% end %>
              <% else %>
                <small class="text-muted"><%= t('.not_pending') %></small>
              <% end %>
            </ul>
          </div>
          <div class="medium-4 column">
          <h5><%= t('.refused') %></h5>
          <ul>
            <% if @meeting.proposals.declined.any? %>
              <% @meeting.proposals.declined.each do  |proposal| %>
                <li>
                  <small><%= proposal.title %></small>
                </li>
              <% end %>
            <% else %>
              <small class="text-muted"><%= t('.not_refused') %></small>
            <% end %>
          </ul>
          </div>

        <% else %>
        <p class="text-muted">
          <%= t('.not_orders') %>
          <% if @meeting.accepting_proposals? %>
            <%= link_to ' puedes proponer un punto para el orden del día', new_proposal_path(meeting_id:@meeting), class: '' %>
          <% end %>
        </p>
        <% end %>
      </div>

    </div>

    <aside class="small-12 medium-3 column">

      <% if @meeting.accepting_proposals? %>
      <%= link_to 'Proponer punto orden del día', new_proposal_path(meeting_id: @meeting), class: 'button  expanded' %>
      <% end %>

      <%= render partial: 'shared/social_share', locals: {
        share_title: t("meetings.show.share"),
        title: @meeting.title,
        url: meeting_url(@meeting)
      } %>
    </aside>

  </div>
</section>
