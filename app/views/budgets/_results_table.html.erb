
  <table id="budget-investments-results" class="table-for-mobile">
    <thead>
    <tr>
      <th scope="col" class="text-center">
        Total de papeletas enviadas
      </th>
      <th scope="col" class="text-center">
        Presenciales
      </th>
      <th scope="col" class="text-center">
        Online
      </th>
      <th scope="col" class="text-center">
        No validadas (nulas)
      </th>
      <th scope="col" class="text-center">
        Válidas
      </th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td scope="col" class="text-center">
        <%= @all_confirmations.count %>
      </td>
      <td scope="col" class="text-center">
        <%= @all_confirmations.online.count %>
      </td>
      <td scope="col" class="text-center">
        <%= @all_confirmations.by_manager.count %>
      </td>
      <td scope="col" class="text-center">
        <%= @not_valid_confirmations.count %>
      </td>
      <td scope="col" class="text-center ballot-points">
        <%= @valid_confirmations.count %>
      </td>
    </tr>
    </tbody>
  </table>

  <small>(*) <i><u>Un voto</u> es una papeleta que fue enviada a través del botón "VOTAR".</i></small><br>
  <small>(*) <i><u>Un voto no validado (nulo)</u> es una papeleta que fue enviada a través del botón "VOTAR", pero no fue  confirmada con el código SMS de seguridad en el proceso de votación.</i></small>
  <br>
  <br>

    <% @group.headings.each do |heading| %>
      <h4 class="inline-block">
        <%= heading.name %>
      </h4>


      <table id="budget-investments-results" class="table-for-mobile">
        <thead>
        <tr>
          <th>
            ID
          </th>
          <th scope="col">
            <%= t("admin.budgets.results.spending_proposal") %>
          </th>
          <th scope="col" class="text-right">
            <%= t("admin.budgets.results.ballot_lines_sum") %>
          </th>
          <th scope="col" class="text-right">
            Fase
          </th>
          <th scope="col" class="text-right">
            <%= t("admin.budgets.results.price") %>
          </th>
        </tr>
        </thead>

        <tbody>
        <% heading.investments.sort_by_confirmed_ballots.selected.each do |investment| %>
            <tr id="<%= dom_id(investment) %>"
                class="spending_proposal success">
            <td>
              <%= investment.id %>
            </td>
            <td>
              <%= link_to investment.title,
                          budget_investment_path(@budget, investment) %>
            </td>
            <td class="text-right ballot-points">
              <%= investment.confirmed_budget_ballot_lines_sum %>
            </td>
            <td class="center">
              -
            </td>
            <td class="text-right">
              <%= format_price investment.price %>
            </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <br>
  <% end %>
