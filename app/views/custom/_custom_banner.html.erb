<% unless @budget %>
    <div class="banner">
      <div class="row banner-inner">

        <div class="medium-1 hide-for-small-only column banner-icon">
          &nbsp;
        </div>

        <div class="medium-9 small-12 column banner-left">

        <span class="message">
          <%= t('budgets.banner.message').html_safe %>
        </span>


        </div>
        <div class="medium-2 small-12 column banner-right">

          <%= link_to budgets_path, class: "clickhere-button" do %>
            <%= image_tag 'clickhere.png', title: t('budgets.banner.callout'), alt: t('budgets.banner.callout') %>
          <% end %>
        </div>
      </div>
    </div>
<% end %>