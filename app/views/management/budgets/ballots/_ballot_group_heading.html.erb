<h5><%= link_to heading.name, management_budget_ballot_path(@budget, @ballot, heading_id: heading.id, group_id: group.id) %></h5>
<% investments = @ballot.sorted_investments(heading.id) %>
<% if investments.any? %>
    <ul class="ballot-list">
      <% if @group %>
          <% investments.each do |investment| %>
              <%= render 'management/budgets/ballots/investment_with_points_for_sidebar',
                         investment: investment,
                         investment_ids: @investment_ids %>
          <% end %>
      <% end %>
    </ul>

<% else %>
    <div class="text-muted">
      <small>
        <p>AÃºn no ha votado ninguna propuesta.</p>
      </small>
    </div>
<% end %>
